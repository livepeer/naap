    "routes": ["/leaderboard", "/leaderboard/*"],
    "navigation": { "label": "AI Leaderboard", "icon": "Trophy" }
  },
  "rbac": {
    "roles": [
      {
        "name": "leaderboard:user",
        "displayName": "Leaderboard User",
        "description": "Can view the AI leaderboard",
        "permissions": [
          { "resource": "leaderboard", "action": "read" }
        ]
      }
    ],
    "defaultRole": "leaderboard:user"
  }
}
