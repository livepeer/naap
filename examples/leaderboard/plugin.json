{
  "$schema": "../../packages/plugin-sdk/plugin.schema.json",
  "name": "leaderboard",
  "displayName": "AI Leaderboard",
  "version": "1.0.0",
  "description": "Livepeer AI orchestrator performance leaderboard â€” consumes the Service Gateway",
  "category": "example",
