{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "./dist",
    "declaration": true,
    "declarationMap": true,
    "module": "ESNext",
    "target": "ES2022",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "jsx": "react-jsx",
    "skipLibCheck": true,
    "noEmit": false,
    "composite": false,
    "noUnusedLocals": false,
    "noImplicitReturns": false,
    "noEmitOnError": false
  },
  "include": ["src/**/*", "cli/**/*"],
  "exclude": ["node_modules", "dist", "templates", "**/__tests__/**", "**/*.test.ts", "src/testing/**"]
}
