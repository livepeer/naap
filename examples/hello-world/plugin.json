{
  "$schema": "../../packages/plugin-sdk/plugin.schema.json",
  "name": "hello-world",
  "displayName": "Hello World",
  "version": "1.0.0",
  "description": "A minimal example plugin demonstrating shell service integration",
  "category": "example",
  "author": {
    "name": "NAAP Examples",
    "email": "examples@naap.dev"
  },
  "icon": "Hand",
  "frontend": {
    "entry": "./frontend/dist/production/hello-world.js",
    "entryPoint": "./frontend/src/App.tsx",
    "devPort": 3020,
    "routes": ["/hello", "/hello/*"],
    "navigation": { "label": "Hello World", "icon": "Hand" }
  },
  "rbac": {
    "roles": [
      {
        "name": "hello-world:user",
        "displayName": "Hello World User",
        "description": "Can view the hello world page",
        "permissions": [
          { "resource": "hello-world", "action": "read" }
        ]
      }
    ],
    "defaultRole": "hello-world:user"
  }
}
