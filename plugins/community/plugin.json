{
  "$schema": "https://plugins.naap.io/schema/plugin.json",
  "name": "community",
  "displayName": "Community Hub",
  "version": "1.2.0",
  "description": "Builder community hub with Q&A, discussions, voting, reputation system, and knowledge sharing.",
  "isCore": true,
  "author": {
    "name": "NAAP Team",
    "email": "team@naap.io",
    "url": "https://naap.io"
  },
  "repository": "https://github.com/naap/plugins/tree/main/community",
  "license": "MIT",
  "keywords": ["community", "forum", "discussions", "social"],
  "category": "social",
  
  "shell": {
    "minVersion": "0.1.0",
    "maxVersion": "2.x"
  },
  
  "frontend": {
    "entry": "./frontend/dist/production/community.js",
    "devPort": 3006,
    "routes": [
      "/forum",
      "/forum/*"
    ],
    "navigation": {
      "label": "Community",
      "icon": "Users",
      "order": 60,
      "group": "social"
    }
  },
  
  "backend": {
    "type": "shell-routed",
    "apiPrefix": "/api/v1/community"
  },
  
  "integrations": {
    "required": [],
    "optional": []
  },
  
  "permissions": {
    "shell": ["navigation", "notifications", "theme"],
    "apis": [],
    "external": []
  },
  
  "config": {
    "schema": {}
  }
}
