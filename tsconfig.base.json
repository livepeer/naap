{
  "compilerOptions": {
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "importHelpers": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "moduleResolution": "bundler",
    "noEmitOnError": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitOverride": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "ES2022",
    "useDefineForClassFields": true,
    "baseUrl": ".",
    "paths": {
      "@naap/ui": ["packages/ui/src/index.ts"],
      "@naap/ui/*": ["packages/ui/src/*"],
      "@naap/theme": ["packages/theme/src/index.ts"],
      "@naap/theme/*": ["packages/theme/src/*"],
      "@naap/types": ["packages/types/src/index.ts"],
      "@naap/types/*": ["packages/types/src/*"],
      "@naap/utils": ["packages/utils/src/index.ts"],
      "@naap/utils/*": ["packages/utils/src/*"],
      "@naap/api-client": ["packages/api-client/src/index.ts"],
      "@naap/api-client/*": ["packages/api-client/src/*"],
      "@naap/config": ["packages/config/src/index.ts"],
      "@naap/config/*": ["packages/config/src/*"],
      "@naap/database": ["packages/database/src/index.ts"],
      "@naap/database/*": ["packages/database/src/*"],
      "@naap/service-registry": ["packages/service-registry/src/index.ts"],
      "@naap/service-registry/*": ["packages/service-registry/src/*"],
      "@naap/services-kafka": ["packages/services/kafka/src/index.ts"],
      "@naap/services-kafka/*": ["packages/services/kafka/src/*"],
      "@naap/services-rest-client": ["packages/services/rest-client/src/index.ts"],
      "@naap/services-rest-client/*": ["packages/services/rest-client/src/*"],
      "@naap/plugin-sdk": ["packages/plugin-sdk/src/index.ts"],
      "@naap/plugin-sdk/*": ["packages/plugin-sdk/src/*"],
      "@naap/plugin-server-sdk": ["packages/plugin-server-sdk/src/index.ts"],
      "@naap/plugin-server-sdk/*": ["packages/plugin-server-sdk/src/*"],
      "@naap/web3": ["packages/web3/src/index.ts"],
      "@naap/web3/*": ["packages/web3/src/*"],
      "@naap/livepeer-contracts": ["packages/livepeer-contracts/src/index.ts"],
      "@naap/livepeer-contracts/*": ["packages/livepeer-contracts/src/*"],
      "@naap/livepeer-node-client": ["packages/livepeer-node-client/src/index.ts"],
      "@naap/livepeer-node-client/*": ["packages/livepeer-node-client/src/*"],
      "@naap/livepeer-pipeline": ["packages/livepeer-pipeline/src/index.ts"],
      "@naap/livepeer-pipeline/*": ["packages/livepeer-pipeline/src/*"]
    }
  },
  "exclude": ["node_modules", "dist"]
}
